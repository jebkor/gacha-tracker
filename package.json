{
  "name": "gacha-planner",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "backend": "ts-node ./api/src/server.ts",
    "start": "concurrently \"npm run backend\" \"npm run dev\"",
    "prod": "npm run build-only && cross-env NODE_ENV=production npm run backend"
  },
  "dependencies": {
    "vue": "^3.5.24",
    "vue-router": "^4.3.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.5.1",
    "@types/node": "^20.17.37",
    "autoprefixer": "^10.4.19",
    "vite": "^7.2.4",
    "vue-tsc": "^2.0.21",
    "daisyui": "^4.12.10",
    "npm-run-all2": "^6.2.0",
    "postcss": "^8.4.39",
    "sass": "^1.77.8",
    "tailwindcss": "^3.4.4",
    "typescript": "~5.4.0"
  }
}
